<div class="text-center">
  <h2>You searched for <%= @raw_query %></h2>
</div>

<div class="container-fluid">
  <div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 card-link">
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card-body">
          <div class="card-picture" style="background-image: url('http://unsplash.it/400/300/?random');">
            <div class="card-hover">
              <div class="card-hover-ingredient">
                <ul>
                  <% cocktail.doses.each do |dose| %>
                    <li class=""><span><%= dose.ingredient.name %></span></li>
                  <% end %>
                </ul>
              </div>
            </div>
            <div class="card-body-name">
              <p><%= cocktail.name %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  </div>
</div>

<div class="footer">
 <p>footer</p>
</div>
