<h1><%= @cocktail.name %> Recipe</h1>

<div class="list-ingredients">
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %><%= dose.ingredient.name %> : <%= dose.description %></li>
    <% end %>
  </ul>
</div>

<div>
  <%= link_to 'Add an ingredient!', new_cocktail_dose_path(@cocktail) %>
</div>

<div>
  <%= link_to 'Back to Cocktails List', cocktails_path %>
</div>
