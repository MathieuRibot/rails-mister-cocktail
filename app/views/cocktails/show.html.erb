<div class="cocktail-banner" style="background-image: url(<%= @cocktail.pic_url %>);">
  <h1><%= @cocktail.name %> Recipe</h1>
</div>

<div class="wrapper">
  <div class="cocktail-content">
    <div class="card-cocktail-description">
      <p>This is a text. This is a text. This is a text. This is a text. This is a text. This is a text. This is a text. This is a text. This is a text. This is a text. This is a text. This is a text. This is a text. This is a text. This is a text. This is a text. This is a text. This is a text. This is a text. This is a text. This is a text. This is a text. This is a text.</p>
      <%= link_to 'Edit', edit_cocktail_path(@cocktail) %>
    </div>

    <div class="card-cocktail-ingredients">
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="far fa-trash-alt"></i>
            <% end %>
            <%= dose.ingredient.name %> : <%= dose.description %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>


<div class="footer">
  <div>
    <%= link_to 'Add an ingredient!', new_cocktail_dose_path(@cocktail) %>
  </div>

  <div>
    <%= link_to 'Back to Cocktails List', cocktails_path %>
  </div>
</div>
